{
    "appenders": [{
            "type": "console",
            "category": "console"
        },
        {
            "category": "burnings_log",
            "type": "console",
            "filename": "./logs/burnings_log/file.log",
            "maxLogSize": 104800,
            "backups": 100
        },
        {
            "category": "log_date",
            "type": "dateFile",
            "filename": "./logs/log_date/date",
            "alwaysIncludePattern": true,
            "pattern": "-yyyy-MM-dd-hh.log"
        }
    ],
    "replaceConsole": true,
    "levels": {
        "burnings_log": "ALL",
        "console": "ALL",
        "log_date": "ALL"
    }
}
